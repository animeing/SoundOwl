{
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.3",
      "excludeFiles": "{node_modules/**,frontend/**,**/*.wasm,**/*.woff*,**/*.ttf,**/*.eot}"
    },
    "sound_create/**": {
      "runtime": "vercel-php@0.7.3",
      "excludeFiles": "{parts/**}"
    },
    "/index.php": {
      "runtime": "vercel-php@0.7.3",
      "excludeFiles": "{parts/**}"
    }
  },

  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/\\.(htaccess|htpasswd|ini)$", "status": 404 },
    { "src": "/(.*)\\.(ico|png|jpe?g|gif|svg|css|js|woff2?)$", 
      "headers": { "cache-control": "public,max-age=604800,immutable" } 
    },
    { "src": "/(.*)", 
      "headers": { 
        "X-Frame-Options": "DENY",
        "X-Content-Type-Options": "nosniff",
        "X-UA-Compatible": "IE=edge,chrome=1"
      }, 
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "/index.php",
      "excludeFiles": "{parts/**}"
    }
  ]
}
